@using APIDisney2.Models;
@model IEnumerable<Personaje>
@{
    ViewData["Title"] = "Personaje";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
<div>
    <a asp-action="Post">Agregar Personaje</a>
</div>
    @if(Model.ToList().Count>0)
    {
      <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Imagen</th>
                <th>Nombre</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                   
                    <td>
                        <img src="@obj.ImagenPersonaje" width=250 height=200 >
                    </td>
                     <td>
                        @obj.Nombre
                    </td>
                    <td >
                        <div style=" align-items: center;">
                            <a asp-controller="Personajes" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary" > <i class="bi bi-pencil"></i> Editar</a>
                        </div>
                        <div>
                            <a asp-controller="Personajes" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger"><i class="bi bi-trash"></i> Eliminar</a>
                        </div>
                        <div>
                            <a asp-controller="Personajes" asp-action="Get" asp-route-id="@obj.Id" class="btn btn-info"><i class="bi bi-book"></i> Mas informacion</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>  
    }else
    {
        <div class="alert alert-warning">
            No se encontro ningun elemento.
        </div>
    }
